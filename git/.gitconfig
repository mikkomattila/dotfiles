[user]
	name = Mikko Mattila
	email = 9086012+mikkomattila@users.noreply.github.com

[alias]
	co = checkout
	cob = checkout -b
	ci = commit
	d = diff
	fe = fetch
	pl = pull
	pu = push
	st = status
	br = branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate
	lg = log --decorate --all --graph --oneline

[core]
	editor = nvim

[diff]
	algorithm = histogram

[fetch]
	prune = true

[help]
	autocorrect = prompt

[init]
	defaultBranch = main

[log]
	date = iso

[merge]
	conflictstyle = diff3

[push]
	autosetupremote = true

